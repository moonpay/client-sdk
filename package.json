{
    "name": "@hypermint/client-sdk",
    "description": "Client SDK for interacting with contracts",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "npm run clean && rollup -c rollup.config.js && rollup -c rollup-solana.config.js",
        "build-evm": "rollup -c rollup.config.js",
        "build-sol": "rollup -c rollup-solana.config.js",
        "lint": "eslint --max-warnings=0 **/*.{ts,tsx}",
        "lint:fix": "eslint --fix --max-warnings=0 **/*.{ts,tsx}",
        "format": "npm run lint && prettier --write **/*.ts",
        "example": "npx serve ./src/example"
    },
    "dependencies": {
        "@solana/web3.js": "1.48.0",
        "buffer": "6.0.3",
        "ethers": "5.6.9"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "22.0.1",
        "@rollup/plugin-json": "4.1.0",
        "@rollup/plugin-node-resolve": "13.3.0",
        "@rollup/plugin-typescript": "8.3.3",
        "@types/node": "16.11.45",
        "@typescript-eslint/eslint-plugin": "5.30.7",
        "@typescript-eslint/parser": "5.30.7",
        "eslint": "8.20.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.2.1",
        "prettier": "2.7.1",
        "rollup": "2.77.0",
        "rollup-plugin-polyfill-node": "0.10.1",
        "rollup-plugin-terser": "7.0.2",
        "serve": "^14.0.1",
        "ts-loader": "9.3.1",
        "typescript": "4.7.4"
    }
}
